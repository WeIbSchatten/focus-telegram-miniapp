{
  "name": "focus-telegram-miniapp-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend/focus-service",
    "backend/focus-kids-service"
  ],
  "scripts": {
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:focus": "npm --workspace backend/focus-service run start:dev",
    "dev:kids": "npm --workspace backend/focus-kids-service run dev",
    "dev": "npm-run-all --parallel dev:frontend dev:focus dev:kids",
    "lint": "echo \"No root lint configured\"",
    "format": "echo \"No root format configured\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}

